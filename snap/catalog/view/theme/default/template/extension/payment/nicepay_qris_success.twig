{{ header }}{{ column_left }}
<div id="content" style="text-align: center; max-width: 600px; margin: auto;">
  <h2>{{ heading_title }}</h2>

  <p><strong>{{ text_qris_instructions }}</strong></p>

  {% if qris_url %}
  <img src="{{ qris_url }}" alt="QR Code" style="max-width: 300px; border: 1px solid #ccc; padding: 5px; margin: 20px 0;" />
  {% endif %}

  <table class="table table-bordered">
    <tr>
      <th>{{ text_transaction_id }}</th>
      <td>{{ trx_id }}</td>
    </tr>
    <tr>
      <th>{{ text_total }}</th>
      <td><strong>Rp {{ amount }}</strong></td>
    </tr>
  </table>

  <a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a>
</div>
{{ footer }}